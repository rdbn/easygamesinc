{% extends 'base.html.twig' %}

{% block title %}{{ app.user.username }}{% endblock %}

{% block body %}
    <div class="row top20">
        <div class="col-lg-12">
            <div class="btn-group" role="group" aria-label="...">
                <a href="{{ path('app.user.comments') }}" class="btn btn-default">Список не прочитанных коментариев</a>
                <a href="{{ path('app.user.change_password') }}" class="btn btn-default">Сменить пароль</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-warning">Сменить пароль:</h3>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Новый пароль'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Повторить'}}) }}
                </div>
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-default'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}