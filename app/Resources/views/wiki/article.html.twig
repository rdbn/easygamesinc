{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('app.wiki.main') }}">back</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>{{ article.title }}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {{ article.text|raw }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {{ article.createdAt.format('Y-m-d H:i:s') }}
        </div>
    </div>
{% endblock %}
