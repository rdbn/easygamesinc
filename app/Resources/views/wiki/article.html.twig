{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('app.wiki.main') }}">back</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>{{ article.title }}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {{ article.text|raw }}
        </div>
    </div>
    <div class="row top20">
        <div class="col-lg-12 text-muted">
            {{ article.createdAt.format('Y-m-d H:i:s') }}
        </div>
    </div>
    <div class="row top20">
        <div class="col-lg-12">
            <h3 class="text-warning">Оставить коментарий:</h3>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.text) }}
                    {{ form_widget(form.text, {"attr": {"class": "form-control"}}) }}
                </div>
                {{ form_widget(form.submit, {"attr": {"class": "btn btn-default"}}) }}
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row top20">
        <div class="col-lg-12">
            <h3 class="text-warning">Коментарии:</h3>
            {% for comment in comments %}
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">{{ comment.user.username }}</h4>
                    <p>{{ comment.text }}</p>
                    <span class="text-muted">{{ comment.createdAt.format("Y-m-d H:i:s") }}</span>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
